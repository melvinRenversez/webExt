{
    "manifest_version": 2,
    "name": "Mon Extension d'Alerte",
    "version": "1.0",
    "description": "Affiche une alerte sur toutes les pages web.",
    "permissions": [
      "activeTab",
      "http://localhost:3000/*",
      "<all_urls>"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  